@model IEnumerable<DataObject.TrainScheduleLineVM>

<table>
    <tr>
        <th>
            <h2>@ViewBag.Title</h2>
        </th>
        @{
            if (ViewBag.Roles != null && ViewBag.Roles.Contains("Manager"))
            {
                <th style="width:60px;"></th>
                <th>
                    @Html.ActionLink("Create New Train Schedule", "CreateNewTrainSchedule")
                </th>
            }
        }
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            Route Number
        </th>
        <th>
            Arrival Time
        </th>
        <th>
            Station Name
        </th>
        <th>
            Train Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.RouteID
            </td>
            <td>
                @item.ArrivalTime
            </td>
            <td>
                @Html.ActionLink(item.StationName, "StationDetails", new { id = item.StationStartID })
            </td>
            <td>
                @Html.ActionLink(item.TrainName, "TrainDetails", new { id = item.TrainID, name = item.TrainName, route = item.RouteID })
            </td>
            <td>
                @Html.ActionLink("Station Schedule Details", "StationScheduleDetails", new { id = item.StationStartID }) |
                @Html.ActionLink("Route Schedule Details", "RouteScheduleDetails", new { id = item.RouteID })
            </td>
        </tr>
    }

</table>
